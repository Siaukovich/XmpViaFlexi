<resources>

  <!--
    Можно ли сделать отступ сверху без marginTop (потому что это костыльно)?
  -->

  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowTranslucentStatus">true</item>
  </style>

  <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="LoginLayoutStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">@drawable/splash</item>
    <item name="android:paddingTop">@dimen/LoginScreenTopMargin</item>
    <item name="android:paddingHorizontal">@dimen/Inset1x</item>
  </style>

  <style name="InvalidCredentialsTextViewStyle">
    <item name="android:layout_width">@dimen/TextViewDefaultWidth</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">@dimen/Inset1x</item>
    <item name="android:visibility">invisible</item>
    <item name="android:background">@drawable/RoundTextView</item>
    <item name="android:textColor">@color/colorErrorText</item>
    <item name="android:textAlignment">center</item>
  </style>

  <style name="LoginEntryStyle">
    <item name="android:background">@android:color/white</item>
    <item name="android:layout_width">@dimen/TextEditDefaultWidth</item>
    <item name="android:layout_height">@dimen/TextEditDefaultHeight</item>
    <item name="android:layout_marginVertical">@dimen/Inset1x</item>
    <item name="android:singleLine">true</item>
    <item name="android:paddingHorizontal">@dimen/Inset1x</item>
  </style>

  <style name="LoginButtonStyle">
    <item name="android:background">@drawable/RoundLoginButton</item>
    <item name="android:layout_width">@dimen/ButtonDefaultWidth</item>
    <item name="android:layout_height">@dimen/ButtonDefaultHeight</item>
    <item name="android:layout_marginVertical">@dimen/Inset1x</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="VacationCellStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">56dp</item>
    <item name="android:paddingTop">8dp</item>
  </style>

  <style name="VacationImageStyle">
    <item name="android:layout_height">@dimen/VacationImageDefaultHeight</item>
    <item name="android:layout_width">wrap_content</item>
  </style>

  <style name="VacationDurationStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
    <item name="android:textColor">@color/colorLightBlue</item>
  </style>

  <style name="VacationTypeStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@android:color/darker_gray</item>
  </style>

  <style name="VacationStatusStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:paddingRight">@dimen/Inset1x</item>
    <item name="android:textColor">@android:color/darker_gray</item>
  </style>

  <style name="SeparatorStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/SeparatorDefaultThickness</item>
  </style>

  <style name="GraySeparatorStyle" parent="SeparatorStyle">
    <item name="android:background">@android:color/darker_gray</item>
  </style>

  <style name="LightBlueSeparatorStyle" parent="SeparatorStyle">
    <item name="android:background">@color/colorLightBlue</item>
  </style>

  <style name="ToolbarTheme" parent="Theme.AppCompat">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/ToolbarDefaultHeight</item>
    <item name="colorPrimary">@color/colorLightBlue</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:background">?attr/colorPrimary</item>
  </style>

  <style name="ToolbarTitleStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:maxLines">1</item>
    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="ToolbarButtonStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@null</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="VacationDayBaseStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center|top</item>
    <item name="android:textSize">@dimen/VacationDayDefaultHeight</item>
  </style>

  <style name="VacationStartDayStyle" parent="VacationDayBaseStyle">
    <item name="android:textColor">@color/colorLightBlue</item>
  </style>
  
  <style name="VacationEndDayStyle" parent="VacationDayBaseStyle">
    <item name="android:textColor">@color/colorLightGreen</item>
  </style>

  <style name="VacationMonthBaseStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/VacationMonthDefaultHeight</item>
  </style>

  <style name="VacationStartMonthStyle" parent="VacationMonthBaseStyle">
    <item name="android:textColor">@color/colorLightBlue</item>
  </style>
  
  <style name="VacationEndMonthStyle" parent="VacationMonthBaseStyle">
    <item name="android:textColor">@color/colorLightGreen</item>
  </style>

  <style name="VacationYearBaseStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/VacationYearDefaultHeight</item>
  </style>

  <style name="VacationStartYearStyle" parent="VacationYearBaseStyle">
    <item name="android:textColor">@color/colorLightBlue</item>
  </style>
  
  <style name="VacationEndYearStyle" parent="VacationYearBaseStyle">
    <item name="android:textColor">@color/colorLightGreen</item>
  </style>

  <style name="RadioButtonStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">@dimen/Inset1x</item>
    <item name="android:buttonTint">@color/colorLightGreen</item>
    <item name="android:paddingLeft">@dimen/InsetHalf</item>
  </style>

</resources>
