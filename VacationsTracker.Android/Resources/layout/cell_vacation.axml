<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
	android:background="#FF0000"
	android:paddingVertical="@dimen/Inset1x">

	<ImageView
		android:id="@+id/vacationImage"
		style="@style/VacationImageStyle"
		android:layout_alignParentLeft="true" />

	<TextView
		android:id="@+id/vacationDuration"
		style="@style/VacationDurationStyle"
		android:layout_toRightOf="@id/vacationImage"
		android:layout_alignParentTop="true"/>

	<TextView
		android:id="@+id/vacationType"
		style="@style/VacationTypeStyle"
		android:layout_below="@id/vacationDuration"
		android:layout_toRightOf="@id/vacationImage"/>

	<TextView
		android:id="@+id/vacationStatus"
		style="@style/VacationStatusStyle"
		android:layout_alignParentRight="true"/>

	<View
		style="@style/SeparatorStyle"
		android:layout_alignParentBottom="true" />

</RelativeLayout>
